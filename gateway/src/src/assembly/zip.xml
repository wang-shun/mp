<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>build${svn.revision}</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>	    
	    <file>
			<source>${project.basedir}/target/shell/bin/install.sh</source>
			<outputDirectory>${project.build.finalName}</outputDirectory>
			<filtered>true</filtered>
			<fileMode>755</fileMode>
		</file>
		<file>
			<source>${project.basedir}/target/shell/bin/service.sh</source>
			<outputDirectory>${project.build.finalName}</outputDirectory>
			<filtered>true</filtered>
			<fileMode>755</fileMode>
		</file>
		<file>
			<source>${project.basedir}/target/shell/bin/app.conf</source>
			<outputDirectory>${project.build.finalName}</outputDirectory>
			<filtered>true</filtered>
			<destName>${project.build.finalName}.conf</destName>
		</file>
		<file>
			<source>${project.basedir}/target/${project.build.finalName}.jar</source>
			<outputDirectory>${project.build.finalName}</outputDirectory>
			<fileMode>755</fileMode>
		</file>
		<file>
			<source>${project.basedir}/target/classes/application.yml</source>
			<outputDirectory>${project.build.finalName}/config</outputDirectory>
		</file>
		
		<file>
			<source>${project.basedir}/target/classes/application.yml</source>
			<outputDirectory>${project.build.finalName}</outputDirectory>
			<destName>application-standalone.yml</destName>
		</file>		
		<file>
			<source>${project.basedir}/target/shell/bin/mapps_create_user_oracle.sql</source>
			<outputDirectory>${project.build.finalName}</outputDirectory>
			<filtered>true</filtered>
			<fileMode>755</fileMode>
		</file>
		<file>
			<source>${project.basedir}/target/shell/bin/mapps_create_user_postgres.sql</source>
			<outputDirectory>${project.build.finalName}</outputDirectory>
			<filtered>true</filtered>
			<fileMode>755</fileMode>
		</file>
		<file>
			<source>${project.basedir}/target/shell/bin/readme.txt</source>
			<outputDirectory>${project.build.finalName}</outputDirectory>
			<filtered>true</filtered>
			<fileMode>755</fileMode>
		</file>	
		
	</files>

</assembly>